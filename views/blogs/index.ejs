<% layout('layouts/boilerplate') %>
<h1>All Blogs</h1>
<a href="/blogs/new" class="btn btn-secondary">Add New Blog</a>
<ul>
  <% for (let blog of blogs) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img class="img-fluid" alt="Blog Image" src="<%= blog.image %>" />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %></h5>
          <p class="card-text"><%= blog.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= blog.author %></small>
          </p>
          <a href="/blogs/<%= blog._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</ul>
